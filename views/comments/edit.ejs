<%- include('../partials/header')%>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit Comment</h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/boxes/<%= box_id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
        <div class="form-group">
          By <strong><%= comment.author.username %></strong>, <%= comment.created.toDateString() %>
          <input type="text" class="form-control" name="comment[text]" value="<%= comment.text %>">
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-lg btn-block">Submit</button>
        </div>
      </form>
      <a href="/boxes/<%= box_id %>">Go Back</a>
    </div>
    <p>
</div>
<%- include('../partials/footer')%>