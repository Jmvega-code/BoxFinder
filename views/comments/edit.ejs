<%- include('../partials/header')%>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">BoxFinder</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src='<%=box.image%>'>
        <div class="caption-full">
          <h4 class="pull-right">$15.00/drop in</h4>
          <h4><a href=""><%=box.name%></a></h4>
          <p><%=box.address%></p>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <% box.comments.forEach((comment) => { %>
      <p>
        <strong><%=comment.author.username%></strong> - <%=comment.text%>, <%=comment.created.toDateString()%>
      </p>
      <%})%>


    
      <form action="/boxes/<%= box._id %>/comments" method="POST">
        <div class="form-group">
          <textarea class="form-control" name="comment[text]" placeholder="Write a comment"></textarea>
        </div>
        <div class="form-group">
          <button class="btn-primary btn-lg btn-default">Submit</button>
        </div>
      </form>
      <a href="/boxes/<%= box._id %>">Go Back</a>
    </div>
    <p>
</div>
<%- include('../partials/footer')%>