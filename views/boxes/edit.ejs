<%- include('../partials/header')%>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit a Box</h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/boxes/<%= box._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="box[name]" value="<%=box.name%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="box[image]" value="<%=box.image%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="box[address]" value="<%=box.address%>">
        </div>
        <div class="form-group">
          <button class="btn-primary btn-lg btn-default btn-block">Edit</button>
        </div>
      </form>
      <a class='btn btn-primary' href="/boxes/<%= box._id %>">Go Back</a>
    </div>
  </div>
</div>
<%- include('../partials/footer')%>