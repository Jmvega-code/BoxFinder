<%- include('../partials/header')%>

  <div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>Welcome to BoxFinder</h1>
        <p>Check the best places to workout</p>
        <p>
          <a  class="btn btn-primary btn-lg" href="/boxes/new">Add New Box</a>
        </p>
      </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">

        <% allBoxes.forEach( box => { %>
          <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              <img src=" <%= box.image %> ">
              <div class="caption">
                <h4><%=box.name%><h4/>
              </div>
              <p>
                <a href="/boxes/<%= box._id %>" class="btn btn-primary">More Info</a>
              </p>
            </div>
          </div>
        <% })%>

    </div>

  </div>  
    
<%- include('../partials/footer')%>